{
    "extends": [
        "airbnb",
        "plugin:promise/recommended"
    ],
    "plugins": [
        "react",
        "promise",
        "class-property"
    ],
    "rules": {
        "linebreak-style": [2, "windows"],
        "no-undef": 1,
        "arrow-parens": [2, "as-needed"],
        "no-mixed-operators": 0,
        "radix": [2, "as-needed"],
        "no-nested-ternary": 0,
        "no-bitwise": 0,
        "no-plusplus": 0,
        "no-restricted-syntax": 0,
        "no-unused-vars": 1,
        "no-use-before-define": 1,
        "no-param-reassign": 1,
        "import/prefer-default-export": 0,
        "no-shadow": 1,
        "brace-style": [2, "stroustrup"],
        "indent": [2, 4, { "SwitchCase": 1 }],
        "max-len": 1,
        "class-methods-use-this": 0,
        "array-callback-return": 0,
        "no-case-declarations": 0,
        "consistent-return": 0,
        "no-class-assign": 1,
        "global-require": 1,
        "import/first": 1,
        "no-prototype-builtins": 1,
        "import/no-named-default": 1,
        "import/no-named-as-default": 1,
        "no-debugger": 0,
        "no-else-return": 0,
        "no-loop-func": 1,
        "import/no-extraneous-dependencies": [
            2,
            {
                "devDependencies": true
            }
        ],

        "class-property/class-property-semicolon": [2, "always"],

        "promise/always-return": 1,
        "promise/catch-or-return": 1,
        "promise/avoid-new": 0
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true
        }
    },
    "globals": {
        "describe": true,
        "expect": true,
        "it": true,
        "jest": true,
        "beforeEach": true
    }
}
